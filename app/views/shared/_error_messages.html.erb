<% if @user.errors.any? %> 
    <div id="error_explanation"> 
        <div class="alert alert-danger"> 
            存在 <%= pluralize(@user.errors.count, "处错误") %>. 
        </div> 
        <ul> 
        <% @user.errors.full_messages.each do |msg| %> 
            <li><%= msg %></li> 
        <% end %> 
        </ul> 
    </div> 
<% end %> 